# =============================================================================
# Groq MCP Server Configuration
# =============================================================================

# Base path for file output
# If not provided, files will be saved to Desktop
BASE_OUTPUT_PATH=~/Desktop #default base path for output files
# BASE_OUTPUT_PATH=./output #optional base path for output files

# Groq API key for all AI functionality (MCP Server + Freelance App)
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# AI Freelance Search App Configuration
# =============================================================================

# Application Settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://freelance_user:freelance_pass@localhost:5432/freelance_db
SQL_ECHO=false

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Security & Authentication
# IMPORTANT: Generate a secure random secret key for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-use-random-generator
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Groq AI Configuration
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.7

# Subscription Tier Limits
FREE_TIER_VETTING_LIMIT=5
PRO_TIER_VETTING_LIMIT=999999
PREMIUM_TIER_VETTING_LIMIT=999999

# Rate Limiting (requests per hour)
FREE_TIER_RATE_LIMIT=100
PRO_TIER_RATE_LIMIT=1000
PREMIUM_TIER_RATE_LIMIT=5000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration (Future)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# EMAIL_FROM=noreply@yourapp.com

# Payment Processing (Future)
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here